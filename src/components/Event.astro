---
import { COLORS, LAYOUT, ANIMATION } from '../consts';

interface Props {
	title: string;
	when: string;
	where: string;
}

const { title, when, where } = Astro.props;
---

<article class="event-card">
	<h3 class="event-title">{title}</h3>
	<div class="event-meta">
		<p class="event-when">üìÖ {when}</p>
		<p class="event-where">üìç {where}</p>
	</div>
	<div class="event-description">
		<slot />
	</div>
</article>

<style define:vars={{ 
	darkerPurple: COLORS.DARKER_PURPLE, 
	darkPurple: COLORS.DARK_PURPLE,
	primaryPink: COLORS.PRIMARY_PINK,
	secondaryPink: COLORS.SECONDARY_PINK,
	lightPink: COLORS.LIGHT_PINK,
	orchid: COLORS.ORCHID,
	borderRadius: LAYOUT.BORDER_RADIUS_SMALL,
	transitionSpeed: ANIMATION.TRANSITION_SPEED
}}>
	.event-card {
		background: linear-gradient(135deg, var(--darkerPurple) 0%, var(--darkPurple) 100%);
		border: 2px solid var(--primaryPink);
		border-radius: var(--borderRadius);
		padding: 2rem;
		transition: all var(--transitionSpeed) ease;
		position: relative;
		overflow: hidden;
	}

	.event-title {
		font-family: "Lobster", cursive;
		font-size: 2rem;
		color: var(--secondaryPink);
		margin-bottom: 1rem;
	}

	.event-meta {
		margin-bottom: 1rem;
	}

	.event-when,
	.event-where {
		color: var(--orchid);
		font-size: 1rem;
		margin: 0.5rem 0;
	}

	.event-description {
		color: var(--lightPink);
		line-height: 1.6;
		font-size: 1rem;
	}

	.event-description :global(strong) {
		color: var(--secondaryPink);
		font-weight: 600;
	}

	.event-description :global(em) {
		color: var(--orchid);
		font-style: italic;
	}

	.event-description :global(a) {
		color: var(--secondaryPink);
		text-decoration: underline;
		transition: color var(--transitionSpeed) ease;
	}

	.event-description :global(a:hover) {
		color: var(--primaryPink);
	}

	.event-description :global(p) {
		margin: 0;
	}
</style>
