---
import BaseHead from '../components/BaseHead.astro';

// Events data - easy to edit and add new events
const events = [
	{
		title: "Saturday Morning Run",
		when: "Every Saturday, 8:00 AM",
		where: "Central Park, Main Entrance",
		description: "Join us for our weekly Saturday morning run! All paces welcome. We typically run 5-10km depending on the group."
	},
	{
		title: "Pink Pony 5K Race",
		when: "March 15, 2025, 9:00 AM",
		where: "Riverside Track & Field",
		description: "Our annual 5K race! Come dressed in your best pink attire. Registration includes a custom Pink Pony Run Club t-shirt and post-race brunch."
	},
	{
		title: "Wednesday Night Social Run",
		when: "Every Wednesday, 6:30 PM",
		where: "Downtown Square",
		description: "A casual evening run followed by drinks and socializing at our favorite local spot. Perfect for meeting new running friends!"
	}
];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="Pink Pony Run Club" description="Join the Pink Pony Run Club for running events and community fun!" />
	</head>
	<body>
		<!-- Hero/Cover Section -->
		<section class="hero">
			<div class="title-container">
				<h1 class="hero-title" id="hero-title">
					<span class="word">PINK</span>
					<span class="word">PONY</span>
					<span class="word">RUN</span>
					<span class="word">CLUB</span>
				</h1>
			</div>
			<div class="scroll-indicator">
				<div class="arrow-down"></div>
			</div>
		</section>

		<!-- Events Section -->
		<section class="events-section">
			<h2 class="section-title">Upcoming Events</h2>
			<div class="events-container">
				{events.map((event) => (
					<article class="event-card">
						<h3 class="event-title">{event.title}</h3>
						<div class="event-meta">
							<p class="event-when">üìÖ {event.when}</p>
							<p class="event-where">üìç {event.where}</p>
						</div>
						<p class="event-description">{event.description}</p>
					</article>
				))}
			</div>
		</section>

		<style>
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			body {
				font-family: "Atkinson", sans-serif;
				background: #000;
				color: #fff;
				overflow-x: hidden;
			}

			/* Hero Section */
			.hero {
				height: 100vh;
				background: #000;
				display: flex;
				flex-direction: column;
				align-items: center;
				justify-content: center;
				position: relative;
			}

			.title-container {
				text-align: center;
			}

			.hero-title {
				font-family: "Lobster", cursive;
				font-size: clamp(3rem, 10vw, 8rem);
				color: #ff1493;
				font-weight: 400;
				line-height: 1.2;
				margin: 0;
			}

			.word {
				display: inline-block;
				margin: 0 0.2em;
				opacity: 0;
			}

			.scroll-indicator {
				position: absolute;
				bottom: 2rem;
				left: 50%;
				transform: translateX(-50%);
			}

			.arrow-down {
				width: 30px;
				height: 30px;
				border-left: 3px solid #ff1493;
				border-bottom: 3px solid #ff1493;
				transform: rotate(-45deg);
				animation: bounce 2s infinite;
			}

			@keyframes bounce {
				0%, 20%, 50%, 80%, 100% {
					transform: translateY(0) rotate(-45deg);
				}
				40% {
					transform: translateY(-10px) rotate(-45deg);
				}
				60% {
					transform: translateY(-5px) rotate(-45deg);
				}
			}

			/* Events Section */
			.events-section {
				min-height: 100vh;
				padding: 4rem 2rem;
				background: linear-gradient(180deg, #000 0%, #1a0a1a 50%, #2d1b2d 100%);
			}

			.section-title {
				font-family: "Lobster", cursive;
				font-size: clamp(2.5rem, 6vw, 5rem);
				color: #ff69b4;
				text-align: center;
				margin-bottom: 3rem;
			}

			.events-container {
				max-width: 1200px;
				margin: 0 auto;
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: 2rem;
			}

			.event-card {
				background: linear-gradient(135deg, #2d1b2d 0%, #1a0a1a 100%);
				border: 2px solid #ff1493;
				border-radius: 15px;
				padding: 2rem;
				transition: transform 0.3s ease, box-shadow 0.3s ease;
			}

			.event-card:hover {
				transform: translateY(-5px);
				box-shadow: 0 10px 30px rgba(255, 20, 147, 0.3);
			}

			.event-title {
				font-family: "Lobster", cursive;
				font-size: 2rem;
				color: #ff69b4;
				margin-bottom: 1rem;
			}

			.event-meta {
				margin-bottom: 1rem;
			}

			.event-when,
			.event-where {
				color: #da70d6;
				font-size: 1rem;
				margin: 0.5rem 0;
			}

			.event-description {
				color: #e6b3e6;
				line-height: 1.6;
				font-size: 1rem;
			}

			@media (max-width: 768px) {
				.hero-title {
					font-size: clamp(2rem, 8vw, 6rem);
				}

				.word {
					display: block;
					margin: 0.1em 0;
				}

				.events-section {
					padding: 3rem 1rem;
				}

				.events-container {
					grid-template-columns: 1fr;
				}
			}
		</style>

		<script>
			import { gsap } from 'gsap';

			// Wait for page to load
			document.addEventListener('DOMContentLoaded', () => {
				// Get all words
				const words = document.querySelectorAll('.word');
				
				// Animate each word
				words.forEach((word, wordIndex) => {
					const text = word.textContent || '';
					word.textContent = '';
					
					// Split word into individual letters
					const letters = text.split('');
					letters.forEach((letter) => {
						const span = document.createElement('span');
						span.textContent = letter;
						span.style.display = 'inline-block';
						span.style.opacity = '0';
						word.appendChild(span);
					});

					// Get all letter spans for this word
					const letterSpans = word.querySelectorAll('span');
					
					// Animate letters flying in
					letterSpans.forEach((letter, letterIndex) => {
						const delay = (wordIndex * 0.3) + (letterIndex * 0.05);
						const fromDirection = Math.random() > 0.5 ? -1 : 1;
						
						gsap.fromTo(letter,
							{
								x: fromDirection * 200,
								y: -100,
								opacity: 0,
								rotation: fromDirection * 90
							},
							{
								x: 0,
								y: 0,
								opacity: 1,
								rotation: 0,
								duration: 0.8,
								delay: delay,
								ease: 'back.out(1.7)'
							}
						);
					});
				});

				// Show words after letters animate
				gsap.to(words, {
					opacity: 1,
					duration: 0,
					delay: 0
				});
			});
		</script>
	</body>
</html>
